# NTP leap second
record(ai, "$(IOCNAME):NTP_LEAP_SEC") {
  field(DESC, "NTP leap second status")
  field(SCAN, "I/O Intr")
  field(DTYP, "IOC NTP stats")
	field(PREC, "0")
  field(INP,  "@ntp_leap_second")
}

# NTP stratum
